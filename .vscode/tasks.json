{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "ext:dev",
      "label": "watch",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "application": "tsc",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*.*",
          "endsPattern": "^\\s*(Found \\d+ error|Found \\d+ errors|No errors|Watching for file changes)"
        }
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "showReuseMessage": false
      }
    },
    {
      "type": "npm",
      "script": "webview:build",
      "label": "build-webview",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}

